[core]
    editor = vim
[pull]
    rebase = false
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[help]
	autocorrect = 20
[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    ui = true
